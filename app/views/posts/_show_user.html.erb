<div id="show-user-post-container">
  <h1 class="posts-header">All Blog Posts</h1>
  <% posts.each do |post| %>
  <a class="no-link-color post-card-link" id="<%= post.slug %>-link" href="<%= post.slug %>" rel="noopener noreferrer">
    <div class="post-card">
    <h2 class="post-title"><%= post.title %></h2>
      <% if post.tags %>
        <div class="post-tags">
          <% post.tags.each do |tag| %>

            <%= link_to tag_path(tag), class: "post-tag" do %>
              <%= tag.name.upcase %>
            <% end %>

          <% end %>
        </div>
      <% end %>
  </a>
  
</div>
<% end %>
<%= will_paginate posts %>


</div>
