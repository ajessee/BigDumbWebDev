<% provide(:title, "New Post") %>
<div class="post-container">
  <%= form_with model: @post, id: "new-post", class: "post-form", local: true do |f| %>
    <h1 id="new-post-header" class="post-form-header">Create New Post</h1>
    <div id="new-post-title" class="float-container">
      <%= f.label :title %>
      <%= f.text_field :title, class: "input-error", required: true %>
    </div>
    <div id="new-post-content" class="trix-wrapper">
      <%= f.rich_text_area :content, class: "trix-content" %>
    </div>
    <div id="add-tags-container">
      <%= f.label "Select from existing tags to add" %>
      <%= collection_select(:post, :counts, Tag.all, :id, :name, include_blank: "Please Select") %>
      <%= f.label "Or add and remove tags here" %>
      <%= f.text_field :all_tags, placeholder: "Tags separated by a comma", id: 'existing-tags-input' %>
    </div>
    <div id="new-post-submit" class="post-submit">
      Publish?
      <%= f.label :published, class: "switch" do %>
        <%= f.check_box :published %>
        <div class="slider round"></div>
      <% end %>
      <%= f.submit "Create Post", id: "new-post-submit-button", class: "submit-close-buttons submit-button" %>
      <button id="new-post-cancel-button" class="submit-close-buttons close-button all-close">Cancel</button>
    </div>
  <% end %>
</div>