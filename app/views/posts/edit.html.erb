<% provide(:title, "Edit Post") %>
<div class="post-container">
  <%= form_with model: @post, id: "new-post", class: "post-form", local: true do |f| %>
    <h1 id="new-post-header" class="post-form-header">Create New Post</h1>
    <div id="new-post-title" class="float-container">
      <%= f.label :title %>
      <%= f.text_field :title, class: "input-error" %>
    </div>
    <div id="new-post-content" class="">
      <%= f.rich_text_area :content, class: "trix-content" %>
    </div>
    <div id="add-tags-container">
        <%= f.label "Select from existing tags" %>
        <%= collection_select(:post, :counts, Tag.all, :id, :name, include_blank: "Please Select") %>
        <%= f.label "Or add one or more here" %>
        <%= f.text_field :new_tags, placeholder: "Tags separated by a comma", class: 'input-error' %>
      </div>
    <div id="new-post-submit" class="post-submit">
      <%= f.submit "Save Changes", id: "new-post-submit-button", class: "submit-close-buttons submit-button" %>
      <button id="new-post-close-button" class="submit-close-buttons close-button all-close">Cancel</button>
    </div>

  <% end %>
</div>