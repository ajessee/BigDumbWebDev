if (!window.utils.modal.infoModal) {
  window.utils.modal.infoModal = window.utils.modal.openModal('grid', '0%', 14, 6, 1, 6, null, null, true);
  window.utils.modal.infoModal.style.backgroundColor = 'aliceblue';
  window.utils.modal.infoModal.style.marginTop = '2%';
  window.utils.modal.infoModal.insertAdjacentHTML('beforeend', "<%= j (render @type) %>");
    // Get close button and attach close modal function
    window.utils.modal.infoModalCloseButton = window.utils.modal.infoModal.querySelector(".all-close");
    window.utils.modal.infoModalCloseButton.addEventListener('click', function (e) {
      window.utils.modal.infoModal = null;
      window.utils.modal.infoModalCloseButton = null;
    })
} 

// Get debug information
<% if Rails.env.development? %>
window.utils.debug.debugPanel.innerHTML = "";
window.utils.debug.debugPanel.insertAdjacentHTML('beforeend', `<%= debug(params) %>`);
<% end %>