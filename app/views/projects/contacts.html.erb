<section id="contacts-project-container">
  
    <div id="contact-add-contact">
        <div id="contact-title">Contact List</div>
        <form id="contact-add-form" onsubmit="return false;">
          <div id="contact-inputs">
            <input name="first-name" id="contact-first-name-input" type="text" placeholder="First Name">
            <input name="last-name" id="contact-last-name-input" type="text" placeholder="Last Name">
            <input name="phone" id="contact-phone-input" type="text" placeholder="Phone">
            <input name="email" id="contact-email-input" type="text" placeholder="Email">
          </div>
          <div id="contact-submit">
            <input type="submit" value="Add Contact" id="contact-project-submit">
          </div>
        </form>
      </div>
    
      <div id="contact-table-card">
          <table id="contact-table">
              <thead>
                <tr id="table-border-bottom">
                  <th>First</th>
                  <th>Last</th>
                  <th>Phone</th>
                  <th>Email</th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="contact-list"></tbody>
            </table>
      </div>

      <div id="contact-modal">
        <div id="contact-modal-content">
          <span id="contact-modal-close"><i class="far fa-times-circle"></i></span>
        </div>
      </div>
</section>