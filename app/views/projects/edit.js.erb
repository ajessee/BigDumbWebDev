if (window.utils.modal.editProjectModal) {
  window.utils.modal.editProjectModal.innerHTML = "";
  window.utils.modal.editProjectModal.insertAdjacentHTML('beforeend', "<%= j (render 'edit') %>");
} else {
  if (window.innerWidth > 1440) {
    window.utils.modal.editProjectModal = window.utils.modal.openModal('block', '0%', 2, 3, 14, 12, null, null, false);
  } else {
    window.utils.modal.editProjectModal = window.utils.modal.openModal('block', '0%', 2, 3, 14, 12, null, null, false);
  }
  window.utils.modal.editProjectModal.insertAdjacentHTML('beforeend', "<%= j (render 'edit') %>");
}
// Get close button and attach close modal function
window.utils.modal.editProjectCloseButton = document.querySelector("#edit-project-close-button");
window.utils.modal.editProjectCloseButton.addEventListener('click', function (e) {
  e.preventDefault();
  window.utils.modal.closeModal(e);
  window.utils.modal.editProjectModal = null;
})
// Initialize labels component
window.utils.labels.init();
// Setup URL slider event listener to show/hide URL field
window.utils.projects.setupUrlSlider();
// Hide empty URL fields
window.utils.projects.checkUrlField();


